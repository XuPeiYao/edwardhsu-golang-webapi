{
    "configurations": [
        {
            "name": "Debug Gin Project",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/src/main/main.go",
            "preLaunchTask":"updateSwagger",
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": " Listening and serving HTTP on :(\\S+)",
                "uriFormat": "http://localhost:%s/swagger/index.html"
            }
        }
    ]
}